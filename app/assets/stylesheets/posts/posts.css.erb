.post{
  height: 100px;
  width: 600px;
  margin-top: 20px;
  margin-left: 400px;
  border-radius: 30px;
  color: black;
  font-size: 20px;
  text-align: center;
  background: linear-gradient(#b6eaeb, #b9b1f5);
  }
  
  .post-date{
    color: gray;
  }

  .communication{
    background-image: url(<%= asset_path('design9.png') %>);
    background-size: cover !important; 
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center;
    padding-bottom: calc(100%*1365/2048);
    background-size: 100% auto;
    opacity: 0.8;
  }

  .box{
    height: 50px;
    width:300px; 
    border-radius: 20px;
  }

  .search-input{
    height: 50px;
    width:300px;
    border-radius: 20px;
  }

