 .post{
  height: 100px;
  width: 600px;
  margin-bottom: 20px;
  margin-left: 400px;
  border-radius: 30px;
  color: black;
  font-size: 20px;
  text-align: center;
  background: linear-gradient(#b6eaeb, #b9b1f5);
  }
  
  .post-date{
    color: gray;
  }

  .communication{
    background-image: url(<%= asset_path('design9.png') %>);
    background-size: cover !important; 
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center;
    padding-bottom: calc(100%*1365/2048);
    background-size: 100% auto;
    opacity: 0.8;
  }

  .box{
    background: #e8f3f3;
    top: 32px;
    left: 32px;
    position: fixed;
    color:black;
    height: 70px;
    width:350px;
    border-radius: 20px;
    font-size: 20px;
  }

  .submit{
    background: #e8f3f3;
    top: 104px;
    left: 60px;
    position: fixed;
    color:black;
    height: 50px;
    width:300px;
    border-radius: 20px;
    font-size: 20px;
  }

  .like-link {
    text-decoration: none;
  }
  
  .like-btn {
    font-size: 35px;
    color: #0c95f1;
    transition: 2.0s ;
  }

  .like-btn:hover {
    background: linear-gradient(#f8f5f7, #6ac2f5);
    border-radius: 50px;
    padding: 0px 200px;
  }

  .caption {
    font-size:		16px;
    color:			rgb(11, 15, 241);
    text-align: 		center;
    padding-top:		20px;
  }

  .mask {
    height: 100px;
    width: 200px;
    opacity:		0;
    -webkit-transition:	all 1.6s ease;
    transition:		all 1.6s ease;
  }
   .mask:hover {
    height: 50px;
    width: 250px;
    opacity:		1;	/* ホバーで表示する */
    background: linear-gradient(#f7f5f6, #6eb6fa);
    border-radius: 50px;
    margin-top: 70px;
   }  
    

@media (max-width: 599px) {

  .post{
  height: 100px;
  width: 290px;
  margin-top: 20px;
  margin-left: 45px;
  border-radius: 30px;
  color: black;
  font-size: 13px;
  text-align: center;
  background: linear-gradient(#b6eaeb, #b9b1f5);
  }
  
  .post-date{
    color: gray;
  }

  .communication{
    background-image: url(<%= asset_path('design9.png') %>);
    background-size: cover !important; 
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center;
    padding-bottom: calc(100%*1365/2048);
    background-size: 100% auto;
    opacity: 0.8;
  }

  .box{
    height: 50px;
    width:180px; 
    border-radius: 20px;
    margin-left: 40px;
  }
}  


