body,html,main
{
  height: 100%;
}

.fixed-bg {
  height: 100%;
  background-size: cover !important; 
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-position: center center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 0 20px;   
}

.main-text0 {
  font-size: 50px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  border-radius: 50px;
  text-align: center;
  color: white;
  text-shadow: white;
  opacity: 0.7;
  margin-bottom: 50px;
}

.main-text1 {
  font-size: 50px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  border-radius: 50px;
