.all{
    min-width: 800px;
    width: 100vw;
    height: 100vh;
    background-color: #f5f5f5;
    display: flex;
    justify-content: center;
    background-image: url(<%= asset_path('design15.png') %>);
    background-size: 100% auto;
}

ul,li {
  margin: 0;
  padding: 0;
}

li {
  list-style: none;
}

div.is-hidden {
  display: none;
}

div.is-visible {
  display: block;
}


.btnstart{
  border-radius: 40px;
  color: black;
  margin-top: 100px;
  padding: 50px;
  font-size: 20px;
  background: linear-gradient(#d6dadb, #434546);
  opacity: 0.77;
  text-align: center;
  font-weight: bold;
  transition: all 0.3s ease 0s;
}

.btnstart:hover {
  background: linear-gradient(#f8fdf5, #c2f5c9);
  color: black;
  padding: 55px;
}

.game {
  display: none;
  position: absolute;
  top: 100px;
  font-size: 20px;
}

.title{
  margin-bottom: 50px;
  font-size: 20px;
  margin-right: 20px;
  color: white;
}

.text{
  font-size: 40px;
   color: white;
}

.result {
  display: none;
  display: flex;
  justify-content: space-between;
  color: white;
}

.screen {
  
  margin: 32px auto;
  text-align: center;
  font-size: 30px;
  color: linear-gradient(#e2eedb, #676d68);
}

.listAnswer {
  margin-top: 24px;
}

.reference{
  font-size: 30px;
  text-align: center;
  color: white;
  text-shadow: white;
  opacity: 0.7;
  margin-top:200px;
}

.questionChoice {
  margin-top: 12px;
  border-radius: 20px;
  background: linear-gradient(#ebedf3, #6b6686);
  transition: all 0.3s ease 0s;
}

.questionChoice:hover {
  background: linear-gradient(#828381, #373837);
  color: black;
  padding: 10px;
}

.reset{
  text-align: center;
  border-radius: 20px;
  background: linear-gradient(#d6dadb, #434546);
  font-size: 18px;
  font-weight: bold;
  color: white;
  margin-top: 150px;
  padding: 17px 95px;
}

.new-score-form{
  position: absolute;
}

.score{
  display: none;
}

.ranking{
    text-align: center;
    border-radius: 20px;
    background: linear-gradient(#d6dadb, #434546);
    font-size: 20px;
    font-weight: bold;
    color: #FFF;
    padding: 2vh 2vw;
    margin-top: 50px;
}