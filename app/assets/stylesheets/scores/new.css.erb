.all{
    background-size:100% auto;/*この場合は高さが自動設定*/
  
    background-color: #f5f5f5;
    display: flex;
    justify-content: center;
    background-image: url(<%= asset_path('design15.png') %>);
    background-size: cover !important; 
    background-attachment: fixed;
    background-position: center;
    padding-bottom: calc(100%*1365/2048);
}

ul,li {
  margin: 0;
  padding: 0;
}

li {
  list-style: none;
}

div.is-hidden {
  display: none;
}

div.is-visible {
  display: block;
}


.btnstart{
  border-radius: 100px;
  color: black;
  margin-top: 200px;
  padding: 100px;
  font-size: 35px;
  background: linear-gradient(#d6dadb, #434546);
  opacity: 0.77;
  text-align: center;
  font-weight: bold;
  transition: all 0.3s ease 0s;
}

.top{
  height:0vh;
  width: 100vw;
}

.btnstart:hover {
  background: linear-gradient(#f8fdf5, #c2f5c9);
  color: black;
}

.game {
  display: none;
  position: absolute;
  top: 100px;
  font-size: 20px;
}

.title{
  margin-bottom: 50px;
  font-size: 20px;
  margin-right: 20px;
  color: white;
}

.text {
  position: relative;
  border-top: solid 2px #80c8d1;
  border-bottom: solid 2px #80c8d1;
  background: #f4f4f4;
  line-height: 1.4;
  padding: 0.4em 0.5em;
  margin: 2em 0 0.5em;
}

.text:after {
  position: absolute;
  font-family: "Font Awesome 5 Free",'Quicksand','Avenir','Arial',sans-serif;
  font-weight: 900;
  content: '\f0a7\ QUESTION';
  background: #80c8d1;
  color: #fff;
  left: 0px;
  bottom: 100%;
  border-radius: 5px 5px 0 0;
  padding: 5px 7px 3px;
  font-size: 0.7em;
  line-height: 1;
  letter-spacing: 0.05em;
}

.screen {
  margin: 32px auto;
  text-align: center;
  font-size: 30px;
  color: linear-gradient(#e2eedb, #676d68);
}

#listAnswer {
  margin-top: 24px;
}

.reference{
  font-size: 30px;
  text-align: center;
  color: white;
  text-shadow: white;
  opacity: 0.7;
  margin-top:200px;
}

.questionChoice {
  margin-top: 12px;
  border-radius: 20px;
  background: linear-gradient(#ebedf3, #6b6686);
  transition: all 0.3s ease 0s;
}

.questionChoice:hover {
  background: linear-gradient(#828381, #373837);
  color: black;
}

.result {
  display: none;
  color: white;
  height: 10vh
}

.checkscore{
  text-align: center;
  border-radius: 20px;
  background: linear-gradient(#d6dadb, #434546);
  font-size: 18px;
  font-weight: bold;
  color: white;
  margin-top: 150px;
  padding: 50px 70px;
  margin-bottom: 30px;
}

.btncommentary{
  text-align: center;
  border-radius: 20px;
  background: linear-gradient(#d6dadb, #434546);
  font-size: 18px;
  color: white;
  padding: 50px 70px;
  transition: all 0.3s ease 0s;
}

.btncommentary:hover {
  background: linear-gradient(#f8fdf5, #c2f5c9);
  color: black;
}


.reset{
  display: inline;
  border-radius: 30px;
  color: black;
  padding: 35px 96px;
  border: 2.5px solid rgb(53, 52, 52);
  font-size: 15px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  opacity: 0.85;
  cursor: pointer;
  transition: all 0.5s ease 0s;
}

.reset:hover {
  background: linear-gradient(#c1faa4, #58ee6c);
  color: black;
}

.new-score-form{
  position: absolute;
}

.score{
  display: none;
}

.ranking{
  
  border-radius: 30px;
  color: black;
  padding: 70px 70px;
  font-size: 15px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  opacity: 0.85;
  position: fixed;
  top: 30px;
  right: 40px;
}

.ranking:hover {
  background: linear-gradient(#c1faa4, #58ee6c);
  color: black;
}

.commentary{
  display: none;
  display: flex;
  justify-content: space-between;
  color: white;
}

