  *{
    margin: 0px;
    padding: 0px;
    }

   .ranking-page{
    background-image: url(<%= asset_path('design11.png') %>);
    background-size: cover !important; 
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center;
    padding-bottom: calc(100%*1365/2048);
    background-size: 100% auto;
    opacity: 0.8;
    background-color: black;
  }

  .ranking-wrap {
    display: flex;
    justify-content: space-between;
  }

  .ranking-title {
  border-radius: 100px;
  width: 300px;
  height: 100px;
  color: rgb(4, 241, 123);
  font-size: 30px;
  font-weight: bold;
  text-align: center;
  background: linear-gradient(#18acb1, #2a17bb);
  opacity: 0.85;
  display: block;
  }

  .allranking{
    display: block;
  }

  .allranking-title{
   border-radius: 30px;
   font-size: 20px;
   background: linear-gradient(#dcf4f5, #b2a9f8);
  }

  .show-allranking{
  border-radius: 50px;
  width: 400px;
  height: 50px;
  color: black;
  font-size: 15px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  opacity: 0.85;
  display: block;
  text-align: center;
  margin-bottom: 15px;
  }

.weeklyranking-title{
  border-radius: 30px;
  font-size: 20px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
}

.weeklyranking{
    display: block;
  }

  .score-color{
    color: rgb(245, 209, 4);
    font-size: 18px;
    font-weight: bold;
    text-shadow: 1px 1px 3px black; 
    
  }

.show-weeklyranking{
  border-radius: 50px;
  width: 400px;
  height: 50px;
  color: black;
  font-size: 15px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  opacity: 0.85;
  display: block;
  text-align: center;
  margin-bottom: 15px;
  margin-right: 200px;
  }

  .average{
  border-radius: 70px;
  width: 200px;
  line-height: 35px;
  color: green;
  font-size: 20px;
  opacity: 0.85;
  position:absolute;
  top: 0px;
  text-align: center;
  margin-left: 50px;
  margin-top: 45px;
  }

@media (max-width: 599px) {

   .ranking-page{
     background-image: url(<%= asset_path('design11.png') %>);
  background-size: cover !important; 
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-position: center center;
   }

   .ranking-title {
  border-radius: 50px;
  padding: 20px;
  width: 160px;
  color: rgb(4, 241, 123);
  font-size: 20px;
  text-align: center;
  background: linear-gradient(#18acb1, #2a17bb);
  opacity: 0.85;
  display: block;
  margin-left: 100px;
  }

  .show-ranking{
  border-radius: 50px;
  width: 300px;
  height: 35px;
  color: black;
  font-size: 15px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  margin-left: 20px;
  opacity: 0.85;

  transition: all 0.3s ease 0s;
  display: block;
  margin-top: 20px;
  padding: 20px;
  padding-top: 5px;
  text-align: center;
  }

  .show-ranking:hover {
    background: linear-gradient(#c1faa4, #58ee6c);
    color: black;
    padding: 30px;
  }

  .average{
  border-radius: 70px;
  width: 200px;
  line-height: 35px;
  color: green;
  font-size: 14px;
  opacity: 0.85;
  position:absolute;
  top: 0px;
  text-align: center;
  margin-left: 100px;
  margin-top: 40px;
  }


 }