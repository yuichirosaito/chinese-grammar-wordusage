  *{
    margin: 0px;
    padding: 0px;
    }

   .ranking-page{
    width:100vw;
    background-image: url(<%= asset_path('design11.png') %>);
    background-size: cover !important; 
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center;
    padding-bottom: calc(100%*950/1950);
    background-size: 100% auto;
    opacity: 0.8;
  }

  .ranking-title {
  border-radius: 100px;
  width: 600px;
  color: rgb(4, 241, 123);
  font-size: 35px;
  text-align: center;
  background: linear-gradient(#18acb1, #2a17bb);
  opacity: 0.85;
  cursor: pointer;
  transition: all 1.0s ease 0s;
  display: block;
  margin-left: 400px;
  }

  .ranking-title:hover {
    background: linear-gradient(#c1faa4, #58ee6c);
    color: black;
    padding: 40px;
  }

  .show-ranking{
  border-radius: 50px;
  width: 300px;
  height: 35px;
  color: black;
  font-size: 15px;
  background: linear-gradient(#dcf4f5, #b2a9f8);
  margin-left: 500px;
  opacity: 0.85;
  cursor: pointer;
  transition: all 0.3s ease 0s;
  display: block;
  margin-top: 20px;
  padding: 20px;
  padding-top: 5px;
  text-align: center;
  }

  .show-ranking:hover {
    background: linear-gradient(#c1faa4, #58ee6c);
    color: black;
    padding: 30px;
  }

  

