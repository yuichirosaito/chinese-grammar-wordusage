<div class="all">

    <div id="sceneTop" class="top screen">
      <button class="btnstart"id="btnStart">回答開始</button>
    </div>

    <div id="sceneGame" class="game screen">
      <h1 class="title">最も適切な選択肢をクリックしてください</h1>
      <p class= "text", id="textQuestion"></p>
      <ul id="listAnswer"></ul>
      <p class="reference">中国語検定改題（http://www.chuken.gr.jp/tcp/test.html）</p>
    </div>

    <div id="sceneResult" class="result screen">
       <div class="checkscore"><%= current_user.nickname%>さんの<p>得点は100点満点中<span id="showScore"></span>点です。</p> </div>
       <div class="btncommentary" id="btnCommentary">解説を見る</div>
    </div>

    <div id="sceneCommentary" class="commentary screen">
  
     <div class="mistaken-question">間違えた問題</div>
     <ul id="textQuestion2"></ul> 

     <div class="explain-title">解説</div>
     <ul id="explainedQuestion"></ul>

       <!--<p class="reset" id="btnReset">もう一度</p>-->
       <%= form_with model: @score, class: 'new-score-form', local: true do |form| %>
       <%= form.number_field :score, value: "", url: scores_path, id: "score", class:"score"%>
       <%= form.submit "トップページに戻る" , id: "score-submit" ,class:"ranking" %>
       <% end %>
       
    </div>
    

</div> 

