<%= form_with model: @user, url: user_session_path, class: 'registration-main', method: :post, local: true do |f| %>

<%= link_to(user_twitter_omniauth_authorize_path, method: :post, class: 'purchase-btn2') do %>
  <span class='purchase-btn-text2'>Twitterで登録</span>
  <%= image_tag 'twitter.png' , size: '50x50' ,class: "purchase-btn-icon2" %>
  <% end %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      中国語文法・語法<br>ログイン
    </h1>
  </div>

<%= link_to(user_facebook_omniauth_authorize_path, method: :post, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>Facebookで登録</span>
  <%= image_tag 'facebook.png' , size: '45x45' ,class: "purchase-btn-icon" %>
  <% end %>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password"%>
  </div>
  
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"register-red-btn" %>
  </div>
 <div class="new-register">
  <%= link_to 'アカウントを持っていない場合', new_user_registration_path, method: :get, class: "new-registe" %>
 </div>
</div>
<% end %>

