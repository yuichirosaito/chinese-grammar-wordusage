<%= form_with model: @user, url: user_registration_path, class: 'registration-main', method: :post, local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      中国語文法・語法<br>新規登録
    </h1>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"></label>
    </div>
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, class:"input-default", autofocus: true%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"></label>
    </div>
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"input-default", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text"></label>
    </div>
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"input-default"%>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  
  <div class='register-btn'>
    <%= f.submit "ユーザー登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
